{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "paths": {
            "type": "array",
            "items": [
                {
                    "type": "string"
                }
            ]
        },
        "transpiler": {
            "type": "object",
            "properties": {
                "strictTypes": {
                    "type": "boolean"
                },
                "cache": {
                    "type": "boolean"
                },
                "sourceMap": {
                    "type": "boolean"
                }
            }
        }
    },
    "required": [
        "paths",
        "transpiler"
    ]
}
