{
    "name": "pxp/pxp",
    "description": "The PXP Programming Language",
    "keywords": ["pxp", "php", "transpiler", "superset"],
    "homepage": "https://pxplang.org",
    "type": "library",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/pxp-lang/pxp/issues",
        "source": "https://github.com/pxp-lang/pxp"
    },
    "authors": [
        {
            "name": "Ryan Chandler",
            "email": "support@ryangjchandler.co.uk"
        }
    ],
    "require": {
        "php": "^8.2",
        "pxp/parser": "v0.0.4"
    },
    "require-dev": {
        "laravel/pint": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Pxp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pxp\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "./app/PhpStan/extension.neon"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
